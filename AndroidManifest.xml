<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.illuzor.sag"
    android:versionCode="1"
    android:versionName="0.5"
      >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name=".MainMenu" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SettingsScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.illuzor.sag.SETTINGS_SCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".GameScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.illuzor.sag.GAME_SCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ScoresScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.illuzor.sag.SCORES_SCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
                android:name=".LastScoresScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.illuzor.sag.LAST_SCORES_SCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>